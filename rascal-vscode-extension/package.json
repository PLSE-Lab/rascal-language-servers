{
	"name": "rascalmpl",
	"displayName": "Rascal Metaprogramming Language",
	"description": "Provides language support for the Rascal metaprogramming language",
	"publisher": "usethesource",
	"version": "0.0.1-SNAPSHOT",
	"engines": {
		"vscode": "^1.52.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cwi-swat/rascal-vscode"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:rascalmpl.createTerminal",
		"onLanguage:rascalmpl"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rascalmpl.createTerminal",
				"title": "Create Rascal Terminal"
			}
		],
		"languages": [
			{
				"id": "rascalmpl",
				"aliases": [
					"Rascal MPL"
				],
				"extensions": [
					".rsc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "rascalmpl",
				"scopeName": "source.rascalmpl",
				"path": "./syntaxes/simple.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"lsp4j:package": "cp ../rascal-lsp/target/rascal-lsp*SNAPSHOT.jar out/rascal-lsp.jar && cp ../rascal-lsp/target/lib/*.jar out/",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"vsce": "^1.85.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.14.28",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"ts-loader": "^8.0.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
